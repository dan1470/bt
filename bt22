#include <stdio.h>
void chuyendoi(int n) {
    int np[32];
    int i = 0;
    while (n>0) {
        np n /= 2;         
        i++;               
    }
    for (int j = i-1; j >= 0; j--) {
        printf("%d", np[j]);
    }
    printf("\n");
}

int main() {
    int n;
    scanf("%d", &n);
    if (n<=0) 
        return 1;
    chuyendoi(n);
    return 0;
}
